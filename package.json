{
  "name": "atlas",
  "version": "0.0.4",
  "description": "a web browser",
  "main": "src/main/main.cjs",
  "type": "module",
  "scripts": {
    "start": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "dev": "vite",
    "build": "vite build",
    "build:electron": "vite build -c vite.electron.config.js && cp src/main/preload.cjs dist/main/",
    "binary": "npm run build && npm run build:electron && electron-builder --mac --x64"
  },
  "build": {
    "appId": "com.atlas.browser",
    "productName": "Atlas",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}",
      "app": "."
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg"]
    }
  },
  "author": "LucaIsMyName",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "vite": "^5.4.11",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@codemirror/theme-one-dark": "^6.1.2",
    "@dnd-kit/core": "^6.2.0",
    "@dnd-kit/sortable": "^9.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@mlc-ai/web-llm": "^0.2.78",
    "@node-rs/argon2": "^2.0.0",
    "@radix-ui/react-dialog": "^1.1.5",
    "@tanstack/react-table": "^8.20.5",
    "@tippyjs/react": "^4.2.6",
    "@uiw/react-codemirror": "^4.23.6",
    "@uiw/react-json-view": "^2.0.0-alpha.30",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.2.1",
    "electron-acrylic-window": "^0.5.11",
    "lucide-react": "^0.460.0",
    "marked": "^15.0.2",
    "motion": "^12.0.6",
    "papaparse": "^5.4.1",
    "prettier": "^2.8.8",
    "react": "^18.3.1",
    "react-color": "^2.19.3",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.1",
    "react-scan": "^0.0.35",
    "sql-parse": "^0.1.5",
    "sql.js": "^1.12.0",
    "swiper": "^11.2.2",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "tippy.js": "^6.3.7",
    "xml2js": "^0.6.2",
    "yaml": "^2.6.1",
    "zustand": "^5.0.1"
  }
}
